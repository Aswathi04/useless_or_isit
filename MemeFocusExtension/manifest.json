{
  "manifest_version": 3,
  "name": "Meme Focus",
  "version": "1.0",
  "description": "An extension to keep you focused in Google Meet using memes and audio.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://meet.google.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["content.js"]
    }
  ],
  "sandbox": {
    "pages": ["sandbox.html"]
  },
  "content_security_policy": {
    "sandbox": "sandbox allow-scripts allow-downloads; script-src 'self' 'unsafe-eval' 'wasm-unsafe-eval' blob:; worker-src 'self' 'wasm-unsafe-eval' blob:;"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "libs/tf.min.js",
        "libs/face-api.min.js",
        "models/*",
        "memes/*",
        "audio/*",
        "sandbox.html",
        "sandbox.js"
      ],
      "matches": ["https://meet.google.com/*"]
    }
  ]
}